{
  "name": "rh-app",
  "version": "1.0.0",
  "description": "Aplicativo para estudo, poderia ser usado por um setor de RH para filtrar c√∫rriculos por tags",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint *.js",
    "prepush": "npm run lint",
    "serve": "browser-sync start --server --files '*.css, *.js, *.html'",
    "css": "postcss -c postcss-options.json",
    "css:watch": "npm run css -- -w",
    "watch:all": "parallelshell 'npm run serve' 'npm run css:watch'",
    "start": "npm run watch:all",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baltazarparra/rh-app.git"
  },
  "author": "Baltazar Parra <baltazarparra> (https://baltazarparra.github.io/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/baltazarparra/rh-app/issues"
  },
  "homepage": "https://github.com/baltazarparra/rh-app#readme",
  "devDependencies": {
    "browser-sync": "^2.18.5",
    "cssnano": "^3.10.0",
    "cssnext": "^1.8.4",
    "eslint": "^3.12.2",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^0.12.0",
    "parallelshell": "^2.0.0",
    "postcss": "^5.2.8",
    "precss": "^1.4.0",
    "watch": "^1.0.1"
  }
}
